{% extends "layout.njk" %}
{% block content %}
    <section class="login container form">
        <form method="POST" action="/users/forgot-password">
            <div class="header">
                <h3>Forgot your password ?</h3>
            </div>
            <div class="fields">
                <div class="item">
                    <div>E-mail</div>
                    <div class="input">
                        <input type="email" name="email" placeholder="insert your e-mail to recover your password" value="{{ user.email }}" onblur="Validate.apply(this, 'isValidEmail')"></div>
                    </div>
                </div>
                <button class="button" type="submit">recovery password </button>
            </form>
        </section>
    {% endblock content %}