{% extends "layout.njk" %}
{% import "partials/card.njk" as card %}
{% block content %}
    {% call card.render("Forgot password ?", 'password container') %}
    <form method="POST" action="/users/forgot-password">
        <div class="fields">
            <div class="item">
                <div>E-mail</div>
                <div class="input">
                    <input type="email" name="email" placeholder="insert your e-mail to recover your password" value="{{ user.email }}" onblur="Validate.apply(this, 'isValidEmail')"></div>
                </div>
            </div>
            <button class="button" type="submit">recovery password
            </button>
        </form>
        {% endcall %}
    {% endblock content %}