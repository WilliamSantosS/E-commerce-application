{% extends "layout.njk" %}
{% import 'partials/card.njk' as cards %}
{% block content %}
    {% call cards.render("", 'order-error container') %}
    <div class="error-lottie"></div>
    <h2>Sorry</h2>
    <p>
        We couldn't finish your order
    </p>
    <a href="#" onclick="history.back()">Please try again</a>
    {% endcall %}
    <script src="/lottie.min.js"></script>
    <script>
        const element = document.querySelector('.error-lottie')
        lottie.loadAnimation({
            container: element,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/error.json'
        });
    </script>
{% endblock content %}